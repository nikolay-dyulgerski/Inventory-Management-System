<Page x:Class="Senior_Project_WPF.DashBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Dashboard" Height="450" Width="800">
    <Grid Background="#FF0277BD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Sales Analytics Dashboard" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="10"/>


        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="41*"/>
            </Grid.ColumnDefinitions>

            <Canvas x:Name="chartCanvas" Grid.ColumnSpan="3" Background="WhiteSmoke"/>
        </Grid>
    </Grid>
</Page>
