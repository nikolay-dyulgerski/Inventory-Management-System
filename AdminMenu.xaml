<Page x:Class="Senior_Project_WPF.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Senior_Project_WPF"
      mc:Ignorable="d" 
      Title="AdminMenu"
      Height="450" Width="800">

    <Grid Background="White">
        <TextBlock Text="Admin Menu"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"/>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" Margin="196,103,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Manage Products" Click="manageProducts_Click"
                    FontSize="17" FontWeight="Bold" Foreground="White" Height="45" Margin="0,5"/>
            <Button Grid.Row="1" Content="View Sales Analytics" Click="saleAnalytics_Click"
                    FontSize="16" FontWeight="Bold" Foreground="White" Height="45" Margin="0,5"/>
            <Button Grid.Row="2" Content="Generate Sales Report" Click="generateReport_Click"
                    FontSize="15" FontWeight="Bold" Foreground="White" Height="45" Margin="0,5"/>
            <Button Grid.Row="3" Content="Predict Sales" Click="predictSales_Click"
                    FontSize="16" FontWeight="Bold" Foreground="White" Height="45" Margin="0,5"/>
            <Button Grid.Row="4" Content="Log out" Click="logOut_Click"
                    FontWeight="Bold" Foreground="White" Height="45" Margin="0,5"/>
        </Grid>
    </Grid>
</Page>
