<Page x:Class="Senior_Project_WPF.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Senior_Project_WPF"
      mc:Ignorable="d"
      Title="Intelligent Inventory Management and Sales Analytics System"
      Height="450" Width="950">

    <Grid Background="White" Margin="20,20,2,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   Text="Welcome to The Intelligent Inventory Management and Sales Analytics System"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   TextAlignment="Center"
                   Margin="10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Left" Margin="193,0,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="usernameTextBox" Height="28" Margin="7,140,3,140"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:" FontSize="16" VerticalAlignment="Top" Margin="0,202,11,0" HorizontalAlignment="Right"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="passwordBox" Height="28" Margin="7,180,3,100"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Button Content="Login" Click="LoginButon_Click" Margin="68,302,204,24" Grid.Column="1" Grid.Row="1"/>
        <Button Content="Back" Click="BackButon_Click" Margin="188,302,84,24" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Page>
